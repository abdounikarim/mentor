{% extends 'base.html.twig' %}

{% block body %}
    {% include 'default/_navbar.html.twig' %}

    <div class="container">
        <div class="starter-template">
            <h1>Facture</h1>
            <h2>{{ "now"|date('m/Y') }}</h2>

            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Désignation</th>
                    <th>Quantité</th>
                    <th>Unité</th>
                    <th>P.U. HT</th>
                    <th>Total HT</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th colspan="4" class="text-right">
                        Total
                    </th>
                    <th>
                        {{ billingData.amount }}
                    </th>
                </tr>
                </tfoot>
                <tbody>
                    {% for type in billingData.type %}
                    <tr>
                        <td>{% if type.noshow == true %}No-show - {% endif %}Session niveau {{ type.level }}</td>
                        <td>{{ type.total }}</td>
                        <td>session</td>
                        <td>{{ type.price }}</td>
                        <td>{{ type.price * type.total }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
