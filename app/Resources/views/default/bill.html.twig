{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker3.min.css">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/main.css') }}">
{% endblock %}

{% block body %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('homepage') }}">Mentor</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="{{ path('homepage') }}">Dashboard</a></li>
                    <li><a href="{{ path('bill') }}">Facture</a></li>
                    <li><a href="{{ path('generator') }}">Générateur</a></li>
                    <li><a href="{{ path('job') }}">Emploi</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">
        <div class="starter-template">
            <h1>Facture</h1>
            <h2>{{ "now"|date('d/m/Y') }}</h2>

            {% for flash_message in app.session.flashBag.get('success') %}
                <div class="alert alert-success alert-dismissible fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ flash_message }}
                </div>
            {% endfor %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Mentoré</th>
                        <th>Parcours</th>
                        <th>Projet</th>
                        <th>Type</th>
                        <th>No-show</th>
                        <th>Tarif</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {{ form_start(form) }}
                        <td>
                            <div class="input-group date">
                                {{ form_widget(form.date) }}<span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                            </div>
                        </td>
                        <td>{{ form_widget(form.student.id) }}{{ form_widget(form.student.fullname) }}</td>
                        <td>{{ form_widget(form.student.path) }}</td>
                        <td>{{ form_widget(form.project) }}</td>
                        <td>{{ form_widget(form.type) }}</td>
                        <td>{{ form_widget(form.noshow) }}</td>
                        <td>{{ form_widget(form.price) }}</td>
                        <td>
                            <a data-toggle="tooltip" href="#" title="Ajouter la session">
                                <i class="glyphicon glyphicon-plus"></i>
                            </a>
                            <input type="submit"></td>
                        {{ form_end(form) }}
                    </tr>

                    {% for session in sessions %}
                    <tr>
                        <td>{{ session.date | date('d/m/Y') }}</td>
                        <td>{{ session.student.firstname }} {{ session.student.name }}</td>
                        <td>{{ session.student.path.name }}</td>
                        <td>{{ session.project.name }}</td>
                        <td>{{ session.type }}</td>
                        <td>{% if session.noshow == true %}Oui{% else %}{{ session.noshow }}{% endif %}</td>
                        <td>{{ session.price }}</td>
                        <td></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script
            src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"
            integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/locales/bootstrap-datepicker.fr.min.js"></script>
    <script>
        var projects = [];
        var selectedProject;

        $(document).ready(function(){
            $('#session_project').attr("disabled", "disabled");

            $('.input-group.date').datepicker({
                format: "dd/mm/yyyy",
                weekStart: 1,
                maxViewMode: 2,
                todayBtn: "linked",
                language: "fr",
                todayHighlight: true,
                autoclose: true,
                }
            );

            /* Autocomplete student */
            $.ui.autocomplete.prototype._renderItem = function( ul, item){
                var term = this.term.split(' ').join('|');
                var re = new RegExp("(" + term + ")", "gi") ;
                var t = item.label.replace(re,"<b>$1</b>");
                return $( "<li></li>" )
                    .data( "item.autocomplete", item )
                    .append( "<a>" + t + "</a>" )
                    .appendTo( ul );
            };
            $('#session_student_fullname').autocomplete({
                source: function(query, response) {
                    var term = query.term;
                    var link = "{{ absolute_url(path('ajax_students', {'term': "query" })) }}";
                    link = link.replace("query", term);
                    $.ajax({
                        url: link,
                        dataType: 'json',
                        success: function (data) {
                            if(data.length === 0) {
                                var array = [
                                    {
                                        label: 'Add ' + term,
                                        value: term,
                                        path: null,
                                    }
                                ];
                                response(array);
                            } else {
                                var array = data.error ? [] : $.map(data, function(object) {
                                    var student = object.student;
                                    console.log(student);
                                    return {
                                        label: student.firstname + " " + student.name,
                                        value: student.id,
                                        path: student.path.id
                                    };
                                });
                                response(array);
                            }
                        }
                    });
                },
                select: function(event, ui) {
                    if ($.isNumeric(ui.item.value)) {
                        $("#session_student_fullname").val(ui.item.label);
                        $("#session_student_id").val(ui.item.value);
                        var option = '#session_student_path option[value=' + ui.item.path + ']';
                        $(option).attr("selected","selected");
                        $('#session_student_path').removeAttr('disabled');
                        getProjectsByPath($("#session_student_path").val());
                    } else {
                        $('#session_project').attr("disabled", "disabled");
                        $("#session_student_fullname").val(ui.item.value);
                        $("#session_student_id").val(null);
                        $('#session_student_path').prop('selectedIndex', 0);
                        $('#session_student_path').removeAttr('disabled');
                    }
                    return false;
                },
                minLength: 2
            });

            $('#session_student_path').change(function () {
                getProjectsByPath($(this).val());
            });

            $('#session_project').change(function () {
                var project = parseInt($(this).val());
                projects.forEach(function (key) {
                    if (key.id === project) {
                        selectedProject = key;
                        getPrice();
                    }
                })
            });

            $('#session_noshow').on('click', function () {
                getPrice();
            });
        });


        function getProjectsByPath(value) {
            var link = "{{ absolute_url(path('ajax_project', {'project_id': "value" })) }}";
            link = link.replace("value", value);
            $.ajax({
                url: link,
                success: function (data) {
                    console.log(data);
                    $('#session_project option').remove();
                    var table = data.data;
                    var select = $('#session_project');
                    var placeholder = '<option selected>Sélectionnez un projet</option>';
                    select.prepend(placeholder);
                    table.forEach(function (project) {
                        projects.push(project);
                        var option = '<option value="' + project.id + '">' + project.name + '</option>';
                        select.append(option);
                    });
                    $('#session_project').removeAttr('disabled');
                }
            })

        }

        function getPrice() {
            if (($('#session_noshow').is(':checked'))) {
                $('#session_price').val(selectedProject.price / 2);
            } else {
                $('#session_price').val(selectedProject.price);
            }

        }

    </script>
{% endblock %}
